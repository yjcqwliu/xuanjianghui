<div class="event_header_block clearfix">
  <h2 class="event_header"><%= @act_location %> <a onclick="seeOtherCity();" href="#">查看其它城市的活动</a> </h2>
 <div class="event_search">
						<form method="get" action="home">

							<input type="hidden" value="searchEvent" name="d" />
							<input type="text" autocomplete="off" id="keywords"
								name="keywords" class="search_event" />
							<input name="" type="image" class="search_new_btn"
								src="http://event.xiaonei.com/img/search_new_btn.gif" align="absmiddle"
								style="margin:-1px 0 0 -5px" />
						</form>
  </div>
</div>
<div style="position:relative;">
<div id="sub-nav" style="position:relative;">
						<ul>
						    <% if !@act_location.blank? %>
							<li class="selected">
								<a href="#" ><%= @act_location %></a>
							</li>
							<% end %>
							<li >
								<div class="event_nav_drop">
									<%= link_to "全部城市", {:controller => :home, :action => :index, :location => ""},:id => "event_drop", :class => "event_nav_link"%>
								</div>

							</li>
							
						</ul>

  </div>
 </div>
<div id="oak" class="gray clearfix">
						<div id="event_left">
							<div class="pager-top">
								<span>共 <strong><%= @activity.length %></strong>
									个活动</span>
								
							</div>

										<%= render(:partial => "partylist", :collection => @activity )%>
							<div>
  <center>
  <%if @page.to_i > 1 then %>
    <%= link_to "上一页", { :action => controller.action_name, :page => (@page.to_i - 1),:location => @act_location, :keywords => @keywords, :time_select => @time_select}, {:class => "chn"} %>
  <% else %>
    上一页
  <% end %>
  &nbsp;
  <%if @page.to_i < @activity.total_pages then %>
    <%= link_to "下一页", { :action => controller.action_name, :page => (@page.to_i + 1),:location => @act_location, :keywords => @keywords, :time_select => @time_select}, {:class => "chn"} %>
  <% else %>
    下一页
  <% end %>
</center></div>
</div>
<div id="event_right">
							<h2>
								条件筛选
							</h2>

							<form method="post" id="Sea" name="Sea"
								action="EventHome.do?act=search">

								<input type="hidden" name="network" id="network"
									value="60008006">
								<label>
									活动时间：
								</label>
								<select onchange="chgunivright()" name="select_days" id="select_days"
									class="inputtext">

									<option 
										value="7">
										一周内
									</option>
									<option  value="31"  <% if @time_select.to_i == 31 -%>selected="selected"<% end -%> >
										一个月内
									</option>
									<option  value="93" <% if @time_select.to_i == 93 %>selected="selected"<% end %> >
										三个月内
									</option>

								</select>
							</form>
						</div>
</div>